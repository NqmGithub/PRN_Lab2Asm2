<Window x:Class="WpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Log in" Height="350" Width="600">
    <Canvas>
        <TextBox x:Name="txtUserName" Canvas.Left="134" TextWrapping="Wrap" Canvas.Top="89" Width="374" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Canvas.Left="265" TextWrapping="Wrap" Text="Log in" Canvas.Top="23" FontWeight="Bold" FontSize="24"/>
        <TextBlock Canvas.Left="59" TextWrapping="Wrap" Text="Username:" Canvas.Top="91"/>
        <TextBox x:Name="txtPassword" Canvas.Left="134" TextWrapping="Wrap" Canvas.Top="131" Width="374" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Canvas.Left="59" TextWrapping="Wrap" Text="Password:" Canvas.Top="133" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="Log in" Canvas.Left="229" Canvas.Top="184" Height="31" Width="142" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Click"/>

    </Canvas>
</Window>
